@model Deneme1MVC.Models.Register
@{
    ViewBag.Title = "Register";
}


<h2>Üye Kayıt</h2>

    


@Html.ValidationSummary()

@using(Html.BeginForm())
{
        @Html.AntiForgeryToken()

            <table>
                
                <tbody>
                    <tr>
                        
                        <td style="width: 140px;">@Html.LabelFor(m => m.Ad)</td>
                        
                        <td>@Html.TextBoxFor(m => m.Ad)</td>
                        
                    </tr>
                    
                    <tr>
                        
                        <td>@Html.LabelFor(m => m.Soyad)</td>
                        
                        <td>@Html.TextBoxFor(m => m.Soyad)</td>
                       
                    </tr>
                    
                    <tr>
                        
                        <td>@Html.LabelFor(m => m.Username)</td>
                        
                        <td>@Html.TextBoxFor(m => m.Username)</td>
                        
                    </tr>
                    
                    <tr>
                        
                        <td>@Html.LabelFor(m => m.Email)</td>
                        
                        <td>@Html.TextBoxFor(m => m.Email)</td>
                        
                    </tr>
                    
                    <tr>
                        
                        <td>@Html.LabelFor(m => m.Password)</td>
                        
                        <td>@Html.PasswordFor(m => m.Password)</td>
                        
                    </tr>
                    
                    <tr>
                        
                        <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                        
                        <td>@Html.PasswordFor(m => m.ConfirmPassword)</td>
                        
                    </tr>
                    
                    <tr>
                        
                        <td></td>
                        
                        <td><input type="submit" value="Kaydol" class="btn btn-default"></td>
                        
                    </tr>
                    
                </tbody>
            </table>
        
}